{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "noImplicitAny": false,
    "moduleResolution": "node",
    "outDir": "dist",
    "baseUrl": ".",
    "sourceMap": true,
    "paths": {
      "*": [
        "node_modules/*",
        "src/types/*"
      ]
    },
  "noUnusedLocals": true,
  "noUnusedParameters": true,
  "emitDecoratorMetadata": true,
  "experimentalDecorators": true
  },
  "include": [
    "src/**/*"
  ]
}